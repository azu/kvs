  },
  "devDependencies": {
    "@jsdevtools/karma-config": "^3.1.7",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "karma": "^5.1.1",
    "karma-cli": "^2.0.0",
    "lerna": "^3.22.1",
    "mocha": "^8.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7"
  },
  "publishConfig": {
    "access": "public"
